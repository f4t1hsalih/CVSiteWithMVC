<div class="my-auto">
    <h2 class="mb-5">İLETİŞİM</h2>
    <form action="/" method="post">
        <div class="form-group">
            <label for="name">Ad Soyad</label>
            <input type="text" class="form-control" id="name" placeholder="Adınız ve Soyadınız" required />
        </div>
        <div class="form-group">
            <label for="email">Mail</label>
            <input type="email" class="form-control" id="email" placeholder="E-posta adresiniz" required />
        </div>
        <div class="form-group">
            <label for="subject">Konu</label>
            <input type="text" class="form-control" id="subject" placeholder="Mesaj konusu" required />
        </div>
        <div class="form-group">
            <label for="message">Mesaj</label>
            <textarea class="form-control" id="message" rows="4" placeholder="Mesajınız" required></textarea>
        </div>
        <button type="submit" class="btn btn-success btn-block">Mesaj Gönder</button>
    </form>
</div>
