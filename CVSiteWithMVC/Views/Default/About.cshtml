@using CVSiteWithMVC.Models.Entity
@model List<tbl_about>

@if (Model != null)
{
    <div class="my-auto">
        @foreach (var item in Model)
        {
            <h1 class="mb-0">
                @item.abt_name
                <span class="text-primary">@item.abt_surname</span>
            </h1>
            <div class="subheading mb-5">
                @item.abt_address
                <a href="mailto:@item.abt_mail">@item.abt_mail</a>
            </div>
            <p class="lead mb-5">@item.abt_note</p>
            <div class="social-icons">
                <a href="@item.abt_linkedin">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a href="@item.abt_github">
                    <i class="fab fa-github"></i>
                </a>
                <a href="@item.abt_twitter">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="@item.abt_instagram">
                    <i class="fab fa-instagram"></i>
                </a>
            </div>
        }
    </div>
}
else
{
    <p>Model is null</p>
}
