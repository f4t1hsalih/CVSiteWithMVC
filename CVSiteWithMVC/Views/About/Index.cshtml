@model List<CVSiteWithMVC.Models.Entity.tbl_about>

@{
    ViewBag.Title = "Hakkında";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="my-4">Hakkında</h2>
    <hr />

    @using (Html.BeginForm("Index", "About", FormMethod.Post))
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 mb-4">
                    @Html.HiddenFor(model => item.abt_id)

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-user"></i> İsim
                        </label>
                        @Html.EditorFor(model => item.abt_name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-user-tag"></i> Soyisim
                        </label>
                        @Html.EditorFor(model => item.abt_surname, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-map-marker-alt"></i> Adres
                        </label>
                        @Html.EditorFor(model => item.abt_address, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-envelope"></i> E-posta
                        </label>
                        @Html.EditorFor(model => item.abt_mail, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-phone"></i> Telefon
                        </label>
                        @Html.EditorFor(model => item.abt_tel, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-sticky-note"></i> Notlar
                        </label>
                        @Html.EditorFor(model => item.abt_note, new { htmlAttributes = new { @class = "form-control", rows = 5 } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fas fa-image"></i> Fotoğraf
                        </label>
                        @Html.EditorFor(model => item.abt_photo, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fab fa-linkedin"></i> LinkedIn
                        </label>
                        @Html.EditorFor(model => item.abt_linkedin, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fab fa-github"></i> GitHub
                        </label>
                        @Html.EditorFor(model => item.abt_github, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fab fa-twitter"></i> Twitter
                        </label>
                        @Html.EditorFor(model => item.abt_twitter, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="form-group">
                        <label class="control-label">
                            <i class="fab fa-instagram"></i> Instagram
                        </label>
                        @Html.EditorFor(model => item.abt_instagram, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            }
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-dark">Güncelle</button>
        </div>
    }
</div>
