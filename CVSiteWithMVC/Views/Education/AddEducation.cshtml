@model CVSiteWithMVC.Models.Entity.tbl_education

@{
    ViewBag.Title = "Eğitim Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Ekle</h2>
<hr />

@using (Html.BeginForm("AddEducation", "Education", FormMethod.Post))
{
    @Html.HiddenFor(x => x.edc_id)
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.edc_title, "Başlık")
        @Html.TextBoxFor(x => x.edc_title, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.edc_title,"",new {@style="color:red"})
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.edc_subtitle, "Alt Başlık")
        @Html.TextBoxFor(x => x.edc_subtitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.edc_subtitle, "", new { @style = "color:red" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.edc_note, "Not")
        @Html.TextBoxFor(x => x.edc_note, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.edc_note, "", new { @style = "color:red" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.edc_date, "Tarih")
        @Html.TextBoxFor(x => x.edc_date, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.edc_date, "", new { @style = "color:red" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.edc_description, "Açıklama")
        @Html.TextAreaFor(x => x.edc_description, new { @class = "form-control", rows = "5" })
        @Html.ValidationMessageFor(x => x.edc_description, "", new { @style = "color:red" })
    </div>
    <button class="btn btn-success font-weight-bold">Kaydet</button>
}
