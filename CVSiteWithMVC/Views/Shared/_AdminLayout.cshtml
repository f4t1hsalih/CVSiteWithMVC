@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/Template/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="/Default/Index/" class="brand-link">
                <span class="brand-text font-weight-light">Siteye Git</span>
            </a>
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Template/img/prof.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">H.Salih Doğan</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/About/Index/" class="nav-link">
                                <i class="nav-icon fas fa-user-circle text-success fa-lg"></i>
                                <p>Hakkımda</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Education/Index/" class="nav-link">
                                <i class="nav-icon fas fa-graduation-cap text-info fa-lg"></i>
                                <p>Eğitimlerim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Experience/Index/" class="nav-link">
                                <i class="nav-icon fas fa-briefcase text-warning fa-lg"></i>
                                <p>Deneyimlerim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-basketball-ball text-danger fa-lg"></i>
                                <p>Hobilerim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Skill/Index/" class="nav-link">
                                <i class="nav-icon fas fa-star text-primary fa-lg"></i>
                                <p>Yeteneklerim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Award/Index/" class="nav-link">
                                <i class="nav-icon fas fa-trophy text-purple fa-lg"></i>
                                <p>Başarılarım</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-envelope text-light fa-lg"></i>
                                <p>İletişim</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <br />
                    @RenderBody()
                </div>
            </section>
        </div>
    </div>
    <script src="~/Template/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/Template/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Template/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <script src="~/Template/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>
