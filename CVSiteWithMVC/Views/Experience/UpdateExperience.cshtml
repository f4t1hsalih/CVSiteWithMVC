@model CVSiteWithMVC.Models.Entity.tbl_experience
@{
    ViewBag.Title = "Deneyim Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Güncelle</h2>
<hr />

@using (Html.BeginForm("UpdateExperience", "Experience", FormMethod.Post))
{
    @Html.HiddenFor(x => x.exp_id)
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.exp_title, "Deneyim Başlık")
        @Html.TextBoxFor(x => x.exp_title, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group mb-3">
        @Html.Label("Alt Başlık")
        @Html.TextBoxFor(x=>x.exp_subtitle, null, new { @class = "form-control" })
    </div>
    <div class="form-group mb-3">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.exp_description, new { @class = "form-control", rows = 4 })
    </div>
    <div class="form-group mb-3">
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.exp_date, null, new { @class = "form-control" })
    </div>
    <button class="btn btn-success font-weight-bold">Güncelle</button>
}
