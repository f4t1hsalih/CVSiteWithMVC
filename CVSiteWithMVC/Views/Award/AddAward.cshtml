@model CVSiteWithMVC.Models.Entity.tbl_award

@{
    ViewBag.Title = "Yeni Başarım Kaydı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başarım Kaydı</h2>
<hr />

@using (Html.BeginForm("AddAward", "Award", FormMethod.Post))
{
    @Html.HiddenFor(x => x.awd_id)
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.awd_award, "Ödül")
        @Html.TextBoxFor(x => x.awd_award, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(x => x.awd_date, "Tarih")
        @Html.TextBoxFor(x => x.awd_date, new { @class = "form-control", required = "required" })
    </div>
    <button class="btn btn-success font-weight-bold">Kaydet</button>
}